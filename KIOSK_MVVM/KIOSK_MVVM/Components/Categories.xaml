<UserControl x:Class="KIOSK_MVVM.Components.Categories"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KIOSK_MVVM.Components"
             mc:Ignorable="d" 
             d:DesignHeight="156" d:DesignWidth="1080">
	<Grid>
		<Border BorderBrush="Blue" BorderThickness="3"/>
		<Button x:Name="LamenButton" 
				Grid.Column="0"
				Content="라면" Click="LamenButton_Click"/>
		<Button x:Name="RiceButton"
				Click="RiceButton_Click"
				Grid.Column="1" 
				Content="밥" 
				/>
		<Button x:Name="BurgerButton" 
				Click="BurgerButton_Click"
				Grid.Column="2" 
				Content="버거" 
				/>
		<Button x:Name="SideMenuButton" 
				Click="SideMenuButton_Click"
				Grid.Column="3" 
				Content="사이드 메뉴" 
				/>
		<Button x:Name="BeverageButton"
				Click="BeverageButton_Click"
				Grid.Column="4" 
				Content="음료" 
				/>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
	</Grid>
</UserControl>

<UserControl x:Class="KIOSK_MVVM.Views.Rices"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KIOSK_MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid 
			Grid.Row="0"
			Grid.Column="0">
			<Button x:Name="bulgogiButton">
				<Image Source="/Resources/Image/Rice/bulgogiRice.jpg"/>

			</Button>
		</Grid>
		<Grid 
			Grid.Row="0"
			Grid.Column="1">
			<Button x:Name="chickenButton">
				<Image Source="/Resources/Image/Rice/chickenRice.jpg"/>
			</Button>
		</Grid>
		<Grid
			Grid.Row="0"
			Grid.Column="2">
			<Button x:Name="eggButton">
				<Image Source="/Resources/Image/Rice/eggRice.jpg"/>
			</Button>
		</Grid>
		<Grid
			Grid.Row="0"
			Grid.Column="3">
			<Button x:Name="kimchiButton">
				<Image Source="../Resources/Image/Rice/kimchiRice.jpg"/>
			</Button>
		</Grid>
		<Grid
			Grid.Row="0"
			Grid.Column="4">
			<Button x:Name="shrimpButton">
				<Image Source="../Resources/Image/Rice/shrimpRice.jpg"/>
			</Button>
		</Grid>
		<Grid
			Grid.Row="1"
			Grid.Column="0">
			<Button x:Name="spamButton">
				<Image Source="../Resources/Image/Rice/spamRice.jpg"/>
			</Button>
		</Grid>

	</Grid>
</UserControl>
